---
import SponsorCard from "../components/SponsorCard.astro";
import Main from "../layouts/Main.astro";
import { SPONSORS, SPONSOR_TIERS } from "../data/sponsors";

const sponsorsByTier = SPONSOR_TIERS.map((tier) => ({
  tier,
  sponsors: SPONSORS.filter((s) => s.tier === tier).sort((a, b) =>
    a.name.localeCompare(b.name),
  ),
})).filter(({ sponsors }) => sponsors.length > 0);
---

<Main title="Sponsors | ACPC">
  <div class="py-8 lg:py-16">
    <h1 class="text-4xl lg:text-6xl font-bold font-heading">2026 Sponsors</h1>
    <section>
      <p class="mt-4 text-xl">
        We are proudly supported by our sponsors who help us run our contests,
        workshops, and other events.
      </p>
    </section>
    {
      sponsorsByTier.map(({ tier, sponsors }) => (
        <section class="py-8">
          <h2 class="text-3xl lg:text-5xl font-bold font-heading capitalize mb-6">
            {tier}
          </h2>
          <div class="grid gap-8">
            {sponsors.map((sponsor) => (
              <SponsorCard
                name={sponsor.name}
                description={sponsor.description}
                image={sponsor.image}
                alt={`${sponsor.name} logo`}
              />
            ))}
          </div>
        </section>
      ))
    }
    <section class="mt-16 text-xl">
      <h2 class="text-3xl lg:text-5xl font-bold mb-4">Become a Sponsor</h2>
      <p class="mb-4">
        Being a sponsor of ACPC is a great way to support the competitive
        programming events we run, while also gaining exposure to talented
        students. We offer various sponsorship packages that can be tailored to
        meet your organisation's needs.
      </p>
      <p>
        To learn more about sponsorship opportunities, please reach out to us at
        <a class="text-primary-light" href="mailto:sponsorships@acpc.io"
          >sponsorships@acpc.io</a
        >.
      </p>
    </section>
  </div></Main
>
