---
interface Props {
  title: string;
  description: string;
  date: string;
  location?: string;
  link?: string;
}

const { title, description, date, location, link } = Astro.props;
---

<div class="bg-accent p-6 flex flex-col lg:flex-row">
  <div class="">
    <h2 class="text-2xl lg:text-4xl pb-4">
      <a href={link} class=`${link ? 'underline' : ''}`>{title}</a>
    </h2>
    <p class="italic pb-4">
      {date}{location ? ` | ${location}` : ""}
    </p>
    <p class="text-xl">{description}</p>
  </div>
</div>
