---
interface Props {
  text: string;
  href?: string;
  variant?: "primary" | "outline";
  ariaLabel?: string;
}

const { text, href, variant = "primary", ariaLabel } = Astro.props;

const hasLink = href && href.length > 0;

const baseStyles = `
  inline-block
  border-2
  py-4 px-16 
  text-xl font-semibold
  transition-all duration-300 ease-in-out
`;

const variantStyles = {
  primary: `
    bg-primary text-white border-primary
    hover:bg-white hover:text-primary hover:border-white
  `,
  outline: `
    bg-transparent text-primary border-primary
    hover:bg-primary hover:text-white hover:border-primary
  `,
};

const combinedStyles = `${baseStyles} ${variantStyles[variant]}`;
---

{
  hasLink ? (
    <a href={href} class={combinedStyles} aria-label={ariaLabel || text}>
      {text}
    </a>
  ) : (
    <button class={combinedStyles} aria-label={ariaLabel || text}>
      {text}
    </button>
  )
}
